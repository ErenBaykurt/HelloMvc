@model Ders
@{
    ViewData["Title"] = "EditDers";
}

<h1>Ders Ekle</h1>
<form asp-action="AddDers" asp-controller="Ders" method="post">
    <label class="fw-bold">Ders Adı:</label>
    <input asp-for="DersAd" />
    <label class="fw-bold">Ders Kodu:</label>
    <input asp-for="DersKodu" />
    <input type="submit" class="btn btn-outline-success" value="Kaydet" />
</form>

